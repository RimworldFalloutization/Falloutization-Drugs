<?xml version="1.0" encoding="utf-8"?>
<Patch MayRequire="Rick.FCP.Raiders">
  <!-- In FCP-Raiders pawn kinds only: replace vanilla drugs with FCP chems -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>FCP - Raiders</li>
    </mods>
    <match Class="PatchOperationSequence">
    <operations>
    <li Class="PatchOperationReplace">
      <xpath>Defs/PawnKindDef[starts-with(defName,'FCP_') and not(contains(defName,'Khan'))]//thingDef[.='PsychiteTea']</xpath>
      <value><thingDef>SmokeleafJoint</thingDef></value>
    </li>
    <li Class="PatchOperationReplace">
      <xpath>Defs/PawnKindDef[starts-with(defName,'FCP_') and not(contains(defName,'Khan'))]//thingDef[.='Flake']</xpath>
      <value><thingDef>FCP_Chem_Jet</thingDef></value>
    </li>
    <li Class="PatchOperationReplace">
      <xpath>Defs/PawnKindDef[starts-with(defName,'FCP_') and not(contains(defName,'Khan'))]//thingDef[.='Yayo']</xpath>
      <value><thingDef>FCP_Chem_Ultrajet</thingDef></value>
    </li>
    <li Class="PatchOperationReplace">
      <xpath>Defs/PawnKindDef[starts-with(defName,'FCP_') and not(contains(defName,'Khan'))]//thingDef[.='GoJuice']</xpath>
      <value><thingDef>FCP_Chem_Psycho</thingDef></value>
    </li>
    <li Class="PatchOperationReplace">
      <xpath>Defs/PawnKindDef[starts-with(defName,'FCP_') and not(contains(defName,'Khan'))]//thingDef[.='WakeUp']</xpath>
      <value><thingDef>FCP_Chem_Buffout</thingDef></value>
    </li>
    </operations>
    </match>
  </Operation>
</Patch>
